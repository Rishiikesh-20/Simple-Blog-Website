
<%-include('partials/header.ejs')%>
<div class="createPost">
<form action="/update" method="post">
  <label for="createContent" style="color:violet;font-weight: 600;">Edit the blog Id: <%=locals.p.id + 1%> </label>
  <br>
  <input type="hidden" name="id" value="<%=locals.p.id%>">
  <br>
  <textarea id="createContent" name="contentBox" rows="4" cols="50" required><%= locals.p.sentence.trim() %></textarea>
  <br>
  <br>
  <input type="submit" class="submitButton" value="Update">
</form>
</div>
</body>
</html>